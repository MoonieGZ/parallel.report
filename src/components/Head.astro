---
import { SEO } from 'astro-seo';
import { base, socials } from '@config';

const { description, pageTitle, title } = Astro.props;

const siteName = Astro.site?.hostname;
const image = new URL(base.favicon?.fileName || '/favicon.png', Astro.site).href;

const IS_PRODUCTION = import.meta.env.MODE === 'production';
---

<head>
  {
    IS_PRODUCTION && !!base.plausible.analytics && !!base.site && (
      <script
        defer
        data-domain={base.site}
        data-api="https://stats.ovy.sh/api/event"
        src="https://stats.ovy.sh/js/script.js"
      />
    )
  }

  <!-- SEO -->
  <SEO
    title={title}
    description={description}
    charset={'UTF-8'}
    openGraph={{
      basic: {
        title: pageTitle,
        type: 'website',
        image,
      },
      optional: {
        siteName,
        description,
      },
      image: {
        alt: base.favicon && base.favicon.alt,
      },
    }}
    twitter={{
      card: 'summary',
      creator: socials && socials.twitter,

      image,
      imageAlt: base.favicon && base.favicon.alt,
    }}
    extend={{
      meta: [
        // Compatibility
        { name: 'viewport', content: 'width=device-width, initial-scale=1' },

        // Astro generator
        { name: 'generator', content: Astro.generator },

        // Theme color
        { name: 'theme-color', content: base.seo && base.seo.color },

        // Keywords
        { name: 'keywords', content: `${base.seo && base.seo.keywords}` },
      ],
      link: [
        // Icon
        { rel: 'icon', href: image },

        // Mastodon verification
        { rel: 'me', href: socials && `${socials.mastodon.link}` },
      ],
    }}
  />
  <slot />
</head>
