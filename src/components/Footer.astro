---
import Link from '@components/Link.astro';
import Separator from '@components/Separator.astro';
import { Icon } from 'astro-iconify';

const IS_PRODUCTION = import.meta.env.MODE === 'production';

const credits = IS_PRODUCTION ? '/credits' : '/credits.txt';
---

<footer class="flex flex-grow flex-col pt-1">
  <slot />

  <hr />

  <span>
    &copy; {new Date().getFullYear()}
    <Link href="https://arciniega.one" title="Chloe Arciniega's website (arciniega.one)" target="_blank">
      Chloe Arciniega
    </Link>
  </span>

  <!-- prettier-ignore -->
  <span class="pb-2">
    Built with
    <Link href="https://astro.build" title="Astro"><Icon size={30} class="mb-0" name="simple-icons:astro" /> Astro</Link>,

    <Link href="https://www.typescriptlang.org/" title="TypeScript">
      <Icon size={30} class="mb-1" name="mdi:language-typescript" />
      TypeScript
    </Link>

    and <Link href="https://arciniega.one" title="love">
      <Icon size={30} class="mb-1" name="mdi:cards-heart" />
      love
    </Link>
  </span>

  <nav class="flex-cel links flex">
    <Link href={credits} title="Credits">Credits</Link>
    <Separator />
    <Link href="https://github.com/solelychloe/parallel.report" title="Source code" target="_blank">Source</Link>
  </nav>
</footer>

<style>
  hr {
    @apply text-ctp-pink;
  }

  .links {
    @apply flex flex-wrap gap-[15px] md:gap-[10px];
    @apply pt-4 pb-1;
  }

  span {
    @apply pt-5;
  }
</style>
