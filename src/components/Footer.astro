---
import Link from '@components/Link.astro';
import Separator from '@components/Separator.astro';
import { Icon } from 'astro-iconify';

const IS_PRODUCTION = import.meta.env.MODE === 'production';

const credits = IS_PRODUCTION ? '/credits' : '/credits.txt';
---

<footer class="flex flex-grow flex-col">
  <slot />

  <hr />

  <span>
    &copy; {new Date().getFullYear()}
    <Link
      class="font-semibold"
      href="https://arciniega.one"
      title="Chloe Arciniega's website (arciniega.one)"
      target="_blank"
    >
      Chloe Arciniega
    </Link>
  </span>

  <!-- prettier-ignore -->
  <span class="pb-2">
    Built with
    <Icon size={30} class="text-ctp-pink" name="simple-icons:astro" />
    <Link class="font-semibold" href="https://astro.build" title="Astro"> Astro</Link>,

    <Icon size={30} class="text-ctp-pink" name="mdi:language-typescript" />
    <Link class="font-semibold" href="https://www.typescriptlang.org/" title="TypeScript"> TypeScript</Link>,

    and <Icon size={30} class="text-ctp-pink" name="mdi:cards-heart" />
    <Link class="font-semibold" href="https://arciniega.one" title="love">love</Link>.
  </span>

  <nav class="flex-cel links flex">
    <Link href="/" title="Home">Home</Link>
    <Separator />
    <Link href="/contact" title="Submit a resource">Submit a resource</Link>
    <Separator />
    <Link href={credits} title="Credits">Credits</Link>
    <Separator />
    <Link href="https://github.com/solelychloe/parallel.report" title="Source code" target="_blank">Source</Link>
  </nav>
</footer>

<style>
  hr {
    @apply text-ctp-pink;
  }

  .links {
    @apply flex flex-wrap gap-[15px] md:gap-[10px];
    @apply pt-2 pb-1;
  }

  span {
    @apply pt-5;
  }
</style>
